<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CNCPendant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#3498db</item>
        <item name="colorPrimaryVariant">#2980b9</item>
        <item name="colorOnPrimary">#ffffff</item>
        <item name="colorSecondary">#2ecc71</item>
        <item name="colorSecondaryVariant">#27ae60</item>
        <item name="colorOnSecondary">#ffffff</item>
        <item name="android:statusBarColor">#1a1a2e</item>
        <item name="android:navigationBarColor">#1a1a2e</item>
        <item name="android:windowBackground">#1a1a2e</item>
        <item name="alertDialogTheme">@style/DarkAlertDialog</item>
