<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/dialog_card_background">

    <!-- Header row with button label and GPIO pin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/buttonLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button 1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPIO"
            android:textSize="12sp"
            android:textColor="#7f8c9a"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/pinSpinner"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:popupBackground="#2c3e50" />

    </LinearLayout>

    <!-- Function rows container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#10FFFFFF"
        android:padding="10dp">

        <!-- Idle function row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Idle"
                android:textSize="13sp"
                android:textColor="#4CAF50" />

            <TextView
                android:id="@+id/idleFunctionPicker"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_background"
                android:text="None"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Running function row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Running"
                android:textSize="13sp"
                android:textColor="#FF9800" />

            <TextView
                android:id="@+id/runningFunctionPicker"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_background"
                android:text="None"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Secondary (Fn+) function row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Fn+"
                android:textSize="13sp"
                android:textColor="#00BCD4" />

            <TextView
                android:id="@+id/secondaryFunctionPicker"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_background"
                android:text="None"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
