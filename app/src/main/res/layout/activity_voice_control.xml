<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:orientation="vertical">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#16213e"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="\u2190"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Voice Control"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/settingsBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Position Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#0f3460">

        <!-- Machine Position -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machine"
                android:textColor="#7f8c8d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/machineX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X: 0.000"
                android:textColor="#e74c3c"
                android:textSize="14sp"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/machineY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y: 0.000"
                android:textColor="#2ecc71"
                android:textSize="14sp"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/machineZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z: 0.000"
                android:textColor="#3498db"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Work Position -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/workspaceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G54"
                android:textColor="#7f8c8d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/workX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X: 0.000"
                android:textColor="#e74c3c"
                android:textSize="14sp"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/workY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y: 0.000"
                android:textColor="#2ecc71"
                android:textSize="14sp"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/workZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z: 0.000"
                android:textColor="#3498db"
                android:textSize="14sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/machineStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idle"
                android:textColor="#2ecc71"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feedDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F: 1000"
                android:textColor="#7f8c8d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/stepDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step: 1mm"
                android:textColor="#7f8c8d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/probeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Probe: 3D"
                android:textColor="#9b59b6"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Voice Control Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Listening Mode Toggle -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/modePushToTalk"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="Push to Talk"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="@drawable/voice_mode_selected" />

            <TextView
                android:id="@+id/modeContinuous"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="Continuous"
                android:textColor="#7f8c8d"
                android:textSize="14sp"
                android:background="@drawable/voice_mode_unselected" />
        </LinearLayout>

        <!-- Microphone Button -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="16dp">

            <View
                android:id="@+id/micPulse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mic_pulse_background"
                android:alpha="0"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/micButton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="\uD83C\uDF99"
                android:textSize="48sp"
                android:background="@drawable/mic_button_background"
                android:clickable="true"
                android:focusable="true" />
        </FrameLayout>

        <!-- Status Text -->
        <TextView
            android:id="@+id/listeningStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap microphone to speak"
            android:textColor="#7f8c8d"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Recognized Text -->
        <TextView
            android:id="@+id/recognizedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp" />

        <!-- Parsed Command -->
        <LinearLayout
            android:id="@+id/commandPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2c3e50"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Command:"
                android:textColor="#7f8c8d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/parsedCommand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#2ecc71"
                android:textSize="16sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Command History -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/commandHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#16213e"
        android:gravity="center">

        <TextView
            android:id="@+id/stopBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/stop_button_background"
            android:gravity="center"
            android:text="STOP"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/helpBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/help_button_background"
            android:gravity="center"
            android:text="?"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>

<!-- Disconnected Overlay -->
<LinearLayout
    android:id="@+id/disconnectedOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC1a1a2e"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âš ï¸"
        android:textSize="64sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnected"
        android:textColor="#e74c3c"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection to CNC lost"
        android:textColor="#7f8c8d"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/reconnectBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="24dp"
            android:gravity="center"
            android:text="Reconnect"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/stop_button_background"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/connectionMenuBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="24dp"
            android:gravity="center"
            android:text="Connection Menu"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/help_button_background" />
    </LinearLayout>

</LinearLayout>

<!-- Alarm Overlay -->
<LinearLayout
    android:id="@+id/alarmOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC1a1a2e"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸš¨"
        android:textSize="64sp" />

    <TextView
        android:id="@+id/alarmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Machine Alarm"
        android:textColor="#e74c3c"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/unlockBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="24dp"
            android:gravity="center"
            android:text="\uD83D\uDD13 Unlock"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/stop_button_background"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/alarmBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="24dp"
            android:gravity="center"
            android:text="Back to Menu"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/help_button_background" />
    </LinearLayout>

    <TextView
        android:id="@+id/alarmMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Machine requires unlock"
        android:textColor="#f39c12"
        android:textSize="14sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        android:lineSpacingExtra="4dp" />

</LinearLayout>

</FrameLayout>